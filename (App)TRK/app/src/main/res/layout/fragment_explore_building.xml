<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgId"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="QRCode請按我"
                    android:id="@+id/btnQRCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_sp1"
                    android:textColor="#E3FCF9"
                    android:textSize="20dp"/>

                <Button
                    android:text="我的集點卡"
                    android:id="@+id/btnLoyaltyCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_style_sp2"
                    android:textColor="#57BBB0"
                    android:textSize="20dp"/>
            </LinearLayout>
            <TextView
                android:text="特色介紹"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#35998E"
                android:textSize="25dp" />
            <TextView
                android:text="內容"
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:layout_marginTop="5dp"
                android:textSize="25dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>