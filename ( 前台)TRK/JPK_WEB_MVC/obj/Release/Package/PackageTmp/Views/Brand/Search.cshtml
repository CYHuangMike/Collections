@model IEnumerable<ViewCompanies_Shopping>
@{
    ViewBag.Title = "Search";
}

<div class="container-fluid">
<h1>品牌搜尋</h1>
<hr />
<br />
<div class="container text-center">
    <div class="row">
        <div class="col-lg-3">
            <form action="/Brand/Search" method="post" class="form-inline">
                <table border="1" width="50" cellspacing="5">
                    <tr>
                        <td>
                            @Html.TextBox("keyword", null, new { @class = "form-control" })
                        </td>
                        <td>
                            <input type="submit" value="搜尋">
                        </td>

                    </tr>
                </table>
            </form>
            <br />

            <table border="1" width="50" cellspacing="5">

                <tr>
                    <td>
                        <table border="0" width="700" cellspacing="0" cellpadding="0">
                            <tr>
                                <td>
                                    <form action="/Search/Search" method="post" class="form-inline">
                                        <table class="brands_letters">
                                            <tr>
                                                @{
                                                    for (int i = 0; i <= 25; i++)
                                                    {
                                                        <td align="center" width="25">

                                                            @Html.ActionLink(@Convert.ToChar(65 + i).ToString(),
                                                                                "Search",
                                                                                "Brand",
                                                                                new { @id = @i },
                                                                                null)
                                                        </td>
                                                    }
                                                }
                                                <td align="center"><a href="#">Others</a></td>
                                            </tr>
                                        </table>
                                    </form>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<br />
<div class="container" style="float:left">
    <div class="row">
        @{
            foreach (ViewCompanies_Shopping view in @Model)

            {
                <div class="col-xs-12 col-md-3 col-sm-6" >
                    <div class="ca-hover " role="button" data-toggle="modal" data-target="#@view.廠商ID" target="_parent">
                        <div class="carousel-img">
                            <img src="@ViewBag.path@view.商標圖片" class="img-responsive" alt="Responsive image" /><br />
                        </div>
                        <div class="carousel-content">
                            <center>
                                <strong>@view.廠商</strong><br />
                                <strong>【櫃位:@view.建築物 側 @view.樓層 樓 @view.櫃位 櫃】</strong><br />
                                <strong>電話：@view.電話</strong>
                            </center>
                        </div>
                        <div class="overlay"></div>
                    </div>
                </div>
                            @*彈跳視窗*@
                            <div class="modal fade" id="@view.廠商ID" role="dialog">
                                <div class="modal-dialog modal-md">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">@view.廠商</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div align="center">
                                                <img src="@ViewBag.path@view.商標圖片" class="img-responsive" alt="Responsive image"/>
                                            </div>
                                            <hr />
                                            <p class="text-left" style="font-size:24px;color:#35998E">@view.簡介</p>
                                            <hr />
                                            <p style="font-size:24px;color:#35998E">電話:@view.電話</p>
                                            <hr />
                                            <p style="font-size:24px;color:#35998E">櫃位:@view.建築物 側 @view.樓層 樓 @view.櫃位 櫃</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
            }
        }

    </div>
</div>
    </div>
<br />
